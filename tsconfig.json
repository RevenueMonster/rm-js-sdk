{
    "compilerOptions": {
        "pretty": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "rootDir": "src",
        "outDir": "dist",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,

        "strict": true,
        "alwaysStrict": true,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    }
}